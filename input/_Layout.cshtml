@inherits Statiq.Razor.StatiqRazorPage<IDocument>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@Document.GetString("Title", "Simon Budden")</title>
    <link rel="icon" href="/assets/favicon.ico" type="image/x-icon">
    <style>
        html {
            scroll-behavior: smooth;
            font-family: Helvetica, Arial, sans-serif;
            color: #333;
        }
        body {
            margin: 0;
            background: #ffffff;
            line-height: 1.6;
        }
        header {
            background: #ffffff;
            padding: 1rem 2rem;
            position: sticky;
            top: 0;
            z-index: 100;
        }
        nav {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            justify-content: center;
        }
        nav a {
            color: #3a2e2a;
            text-decoration: none;
            font-weight: bold;
        }
        nav a:hover {
            color: #0000EE;
        }
        main {
            max-width: 900px;
            margin: 2rem auto;
            padding: 0 1rem;
        }
        section {
            margin-bottom: 3rem;
            scroll-margin-top: 5rem;
        }
        h1, h2, h3 {
            color: #000000;
            font-family: "Trebuchet MS", Helvetica, sans-serif;
        }
        h1 {
            margin-bottom: 0.5rem;
        }
        footer {
            background: #ffffff;
            text-align: center;
            padding: 1rem;
            font-size: 0.9rem;
            color: #3a2e2a;
        }
        img {
            max-width: 100%;
            height: auto;
            border-radius: 6px;
        }
        a {
            color: #0000EE;
        }
        a:hover {
            text-decoration: underline;
        }
        .social-icon {
            height: 1.2em;
            width: auto;
            vertical-align: middle;
            margin: 0 0.25em;
        }
        .hero-image {
            width: 100%;
            height: 40vh;
            min-height: 300px;
            object-fit: cover;
            display: block;
            border-radius: 0;
        }
        .banner-image {
            width: 100%;
            height: 20vh;
            min-height: 180px;
            object-fit: cover;
            display: block;
            border-radius: 4px;
        }
        .hero-container,
        .banner-container {
            position: relative;
            width: 100%;
            overflow: hidden;
            margin-bottom: 1rem;
        }

        /* Overlay text */
        .overlay-text {
            position: absolute; 
            bottom: -0.6rem; 
            left: -0.2rem;
            margin: 0;
            padding: 0;
            color: white;
            font-size: 2.5rem;
            font-weight: 600;
            text-shadow: 0 3px 12px rgba(0, 0, 0, 0.6);
            z-index: 2;
        }

        .hero-container::after,
        .banner-container::after {
            content: "";
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            width: 100%;
            height: 20%;
            background: linear-gradient(
                to top,
                rgba(0,0,0,0.55),
                rgba(0,0,0,0.0)
            );
            z-index: 1;
        }

    </style>
</head>
<body>
    <header>
        <nav>
            <a href="#simon-budden">Simon</a>
            <a href="#experience">Experience</a>
            <a href="#projects">Projects</a>
            <a href="#interests">Interests</a>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        &copy; @(DateTime.Now.Year) Simon Budden
    </footer>
</body>
</html
